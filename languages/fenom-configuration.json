{
  "comments": {
    "blockComment": [ "{*", "*}" ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "\\{%?",
      "end": "%?\\}"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "{{?(block|else|elseif|for|foreach|foreachelse|if)\\b.*}}?",
    "decreaseIndentPattern": "{{?/(block|for|foreach|if)\\b}}?"
  }
}
